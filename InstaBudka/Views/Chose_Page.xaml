<Page x:Class="InstaBudka.Views.Chose_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InstaBudka.Views"
      mc:Ignorable="d" 
      d:DesignHeight="1920" d:DesignWidth="1080"
      Title="Chose_Page"
      DataContext="{Binding RelativeSource= {RelativeSource Self}}">

    <Grid Width="1080" Height="1920">
        <Image Source="../Images/перва страница.png"></Image>

        <Button
                Command="{Binding PhotoCommand }" Margin="316,952,316,854">
            <Button.Template>
                <ControlTemplate>
                    <Border Background="Transparent"/>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button
                    Margin="316,1114,316,692"
                    Command="{Binding LoginCommand}">
            <Button.Template>
                <ControlTemplate>
                    <Border Background="Transparent"/>
                </ControlTemplate>
            </Button.Template>
        </Button>

    </Grid>
</Page>
